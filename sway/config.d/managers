mode "Manager: [b][B]luetooth, [C]tl, [N]m, [w][W]ifi" {
  bindsym w exec rfkill unblock 1; mode "default"
  bindsym shift+w exec rfkill block 1 ; mode "default"
  bindsym b exec kitty systemctl start bluetooth.service; mode "default"
  bindsym shift+b exec kitty systemctl stop bluetooth.service; mode "default"
  bindsym c split h; exec kitty bluetoothctl; mode "default"
  bindsym shift+c split v; exec kitty bluetoothctl; mode "default"
  bindsym n split h; exec nm-connection-editor; mode "default"
  bindsym shift+n split v; exec nm-connection-editor; mode "default"
  # bindsym p exec system-config-printer ; mode "default"
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+m mode "Manager: [b][B]luetooth, [C]tl, [N]m, [w][W]ifi"
