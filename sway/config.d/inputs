# man sway-input
# You can get the names of your inputs by running: swaymsg -t get_inputs

# man 5 sway-input
input type:keyboard {
    xkb_layout us,it
    xkb_options grp:alt_caps_toggle
}

input type:pointer {
    natural_scroll disable
    middle_emulation enabled
}

input type:touchpad {
    tap enabled
    dwt enabled  # disable while typing
    natural_scroll enabled
    middle_emulation enabled
}
