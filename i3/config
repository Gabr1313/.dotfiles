  bindsym 1 exec /home/gabriele/.config/i3/display/only1.sh ; mode "default"
  bindsym 2 exec /home/gabriele/.config/i3/display/only2.sh ; mode "default"
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
